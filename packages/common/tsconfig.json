{
  "extends": "../../base.tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "./src",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "dist",
      "**/*.spec.ts"
  ]
}